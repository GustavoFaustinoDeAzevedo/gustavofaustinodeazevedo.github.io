{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@store/*": ["src/store/*"],
      "@data/*": ["src/data/*"],
      "@os/*": ["src/os/*"],
      "@shared/*": ["src/shared/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@window/*": ["src/components/Window/*"],
      "@windowUtils/*": ["src/components/Window/utils/*"],
      "@filesUtils/*": ["src/components/FilesExplorer/utils/*"],
      "@ui/*": ["src/components/ui/*"],
      "@App/*": ["src/App/*"],
      "@portfolio/*": ["src/components/Portfolio/*"],
      "@apps/*": ["src/components/apps/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
