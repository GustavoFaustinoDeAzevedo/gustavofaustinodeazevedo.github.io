{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@store/*": ["src/store/*"],
      "@data/*": ["src/data/*"],
      "@os/*": ["src/os/*"],
      "@shared/*": ["src/shared/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@filesUtils/*": ["src/components/DesktopEnvironment/*"],
      "@desktopEnv/*": ["src/components/DesktopEnvironment/*"],
      "@shell/*": ["src/components/DesktopEnvironment/*"],
      "@systemShell/*": ["src/components/DesktopEnvironment/*"],
      "@nativeApps/*": [
        "src/components/DesktopEnvironment/NativeApplications/*"
      ],
      "@windowFamilies/*": [
        "src/components/DesktopEnvironment/WindowFamilies/*"
      ],
      "@window/*": ["src/components/DesktopEnvironment/Window/*"],

      "@portfolio/*": ["src/components/Portfolio/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
